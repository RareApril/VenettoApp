<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Línea decorativa debajo del navbar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="#B0B0B0" />

        <!-- ViewPager2 para contenido dinámico -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

        <!-- Contenido debajo de la línea decorativa -->
        <LinearLayout
            android:id="@+id/contact_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título centrado -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visítanos en Gamarra"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center" />

            <!-- Imagen del mapa -->
            <ImageView
                android:id="@+id/mapa_veneto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mapa_veneto" />

            <!-- Dirección 1 centrada -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tienda Antonio Bazo #860"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="10dp" />

            <!-- Dirección 2 centrada -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tienda Italia #1570-1572"
                android:textSize="16sp"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <!-- Título de redes alineado a la izquierda -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestras redes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp" />

            <!-- Iconos de redes sociales en fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="start"
                android:paddingStart="4dp"
                android:paddingEnd="4dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ig_veneto"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/fb_veneto"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/x_veneto"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/yt_veneto"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/tt_veneto" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>
